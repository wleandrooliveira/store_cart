<p id="notice"><%= notice %></p>
<h1>Catalogo de produto</h1>
    <% cache @products do %>
    <% @products.each do |product| %>
    <% cache product do %>
        <div class="entry">
            <h3><%= product.title %></h3>
                <%= sanitize(product.description) %>
                <div class="price_line">
                    <span class="price"><%= number_to_currency(product.price_unit) %></span>
                    <span class="quantity"><%= product.quantity %></span>
                    <%= button_to 'Adicionar ao Carrinho de compras', line_items_path(product_id: product), remote: true %>
                </div>
        </div>
        <% end %>
    <% end %>
<% end %>